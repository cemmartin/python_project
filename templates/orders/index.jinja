{% extends 'base.jinja' %}

{% block content %}
<h1>Orders</h1>

<p class="button_wrapper">
    <a class="new_order_button" href="/orders/new">Place New Order</a>
</p>


<ul>
    {% for order in orders %}
    <li>
        <p>{{ order.customer.customer }}: {{ order.item.item_name }} </p>
        <p>
            <form action="orders/{{order.id}}" method="GET">
                <input type="submit" value="See Order Details">
            </form>
            <form action="orders/{{ order.id}}/edit" method="GET" >
                <input type="submit" value="Edit Order">
            </form>

            <form action="orders/{{ order.id }}/delete" method="POST">
                <input class="order_delete" type="submit" value="Delete Order">
            </form>
        </p>
    </li>
    {% endfor %}
</ul>



<div>

</div>

{% endblock %}